  </tr>

<% @links.each do |link| %>

  <tr>
    <td><%= link.name %></td>
    <td><%= link.read %></td>
    <td><%= link.user_id %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, method: :delete, remote: true, class: 'delete_link' %></td>
  </tr>
<% end %>
</table>

